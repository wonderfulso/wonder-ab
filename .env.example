# Wonder AB Configuration

# Analytics Driver
# Options: none, log, google, plausible, webhook, pivotal, custom
WONDER_AB_ANALYTICS_DRIVER=none

# Google Analytics 4
WONDER_AB_GA4_MEASUREMENT_ID=
WONDER_AB_GA4_API_SECRET=

# Plausible Analytics
WONDER_AB_PLAUSIBLE_DOMAIN=
WONDER_AB_PLAUSIBLE_API_KEY=

# Webhook Integration
WONDER_AB_WEBHOOK_URL=
WONDER_AB_WEBHOOK_SECRET=

# Pivotal AB Service (Optional)
WONDER_AB_API_KEY=
WONDER_AB_API_URL=https://ab.pivotal.so

# Report Dashboard Authentication
# Options: none, basic, closure, middleware
WONDER_AB_REPORT_AUTH=none
WONDER_AB_REPORT_USERNAME=
WONDER_AB_REPORT_PASSWORD=

# Performance & Caching
WONDER_AB_CACHE_ENABLED=true
WONDER_AB_CACHE_DRIVER=
WONDER_AB_CACHE_TTL=86400

# Testing & Development
WONDER_AB_ALLOW_PARAM=false
WONDER_AB_PARAM_RATE_LIMIT=10
WONDER_AB_REQUEST_PARAM=abid
